				<div class="col-lg-12 grid-margin stretch-card" id="table">
			<div class="card overflow-x overflow-y-hidden">
				<div class="card-body">		
<table class="table table-bordered"> 				
<thead>
<tr>
	  <th>#</th>			 
      <th>CCODE</th>
      <th>CNAME</th>
	  <th>Employee Code</th>
      <th>Employee Name</th>
      <th>PO NUM</th>
	  <th> No of  Days</th>

</tr>	 
</thead>
<tbody>
  <tr>
    <% data.forEach(function(pay_roll_generation) { %>
      <td> <%= pay_roll_generation.CCODE %>  </td>
      <td> <%= pay_roll_generation.CNAME %>  </td>
      <td>  <%= pay_roll_generation.EMPCODE %>  </td>
      <td>  <%= pay_roll_generation.Employee_Name %> </td>
      <td> <%= pay_roll_generation.PO_NUM %> </td>
      <td> <%= pay_roll_generation.work_Days %> </td>
      
      <% }) %>
    </tr> 

</tbody>
</table>
